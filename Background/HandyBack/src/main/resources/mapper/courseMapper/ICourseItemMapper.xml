<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.handy.support.mapper.CourseItemMapper">
    <resultMap id="BaseResultMap" type="com.handy.support.entity.CourseItem">

        <constructor>
            <arg column="course_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="item_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
        </constructor>
    </resultMap>

<!--根据course_id查找item list-->
<select id="listByCourseId" resultType="com.handy.support.entity.Item">
    SELECT
    l.item_id AS itemId,
    item_name AS itemName,
    item_number AS itemNumber,
    item_tag AS itemTag
    FROM
    course_item course
    LEFT JOIN item i ON course.item_id = i.item_id
    <where>
        1=1
        <if test="courseId != null">
            course_id=#{courseId}
        </if>
    </where>
</select>

</mapper>