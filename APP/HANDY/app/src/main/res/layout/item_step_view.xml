<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/step_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/step_picture_upload_btn"
        android:background="@drawable/btn_upload_pic"
        android:textColor="#5C5757"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="@string/upload_step_picture"
        android:layout_margin="@dimen/dp_10"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/step_add_step_explain_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_step_explain"
        android:background="@color/white"
        android:textColor="@color/publish_course_button_gray"
        android:layout_marginLeft="@dimen/dp_50"
        />

    <EditText
        android:id="@+id/step_explain_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/edittext_bg"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_20"
        />
</LinearLayout>