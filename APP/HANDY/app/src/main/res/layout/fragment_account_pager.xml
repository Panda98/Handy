<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--tool bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/main_pager_publish"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/dp_40"
            android:background="@drawable/ic_add_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/normal_text"
            android:gravity="center"
            android:textSize="@dimen/sp_24" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/normal_view"
        app:srlPrimaryColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">

            <!--user info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_10">

                <!--头像-->
                <com.shehuan.niv.NiceImageView
                    android:id="@+id/account_pager_user_image"
                    android:layout_gravity="center_vertical"
                    app:is_circle="true"
                    android:layout_marginStart="@dimen/sp_36"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80" />

                <TextView
                    android:id="@+id/account_pager_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sp_36"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_24"
                    android:text="UserName"
                    android:textColor="@color/normal_text"/>

            </LinearLayout>

            <!--setting segment-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/sp_20"
                android:gravity="center_vertical"
                >

                <!--粉丝/关注数-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <!--fan-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:text="粉丝"
                            />

                        <TextView
                            android:id="@+id/account_pager_user_follower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/normal_text"
                            android:text="0"
                            />

                    </LinearLayout>

                    <!--follow-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:text="关注"/>

                        <TextView
                            android:id="@+id/account_pager_user_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="0"/>

                    </LinearLayout>


                </LinearLayout>

                <!--divide line-->
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/divide_color"
                    />

                <!--消息-->
                <LinearLayout
                    android:id="@+id/account_page_message_btn"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@drawable/loading_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/normal_text"
                        android:text="消息"/>

                </LinearLayout>

                <!--浏览历史-->
                <LinearLayout
                    android:id="@+id/account_page_history_btn"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@drawable/loading_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/normal_text"
                        android:text="浏览历史"/>


                </LinearLayout>

                <!--设置-->
                <LinearLayout
                    android:id="@+id/account_page_setting_btn"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@drawable/loading_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/normal_text"
                        android:text="设置"/>

                </LinearLayout>

            </LinearLayout>

            <!--divide line-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/divide_color"/>

            <!--发布教程-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20">

                <!--标题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10">
                    <!--文字-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我发布的教程"
                        android:textSize="18sp"
                        android:textColor="@color/normal_text"/>


                </LinearLayout>
                <!--教程1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_15"
                    android:orientation="horizontal">


                    <!--教程1封面-->
                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/account_page_course1_img"
                        android:layout_gravity="center_vertical"
                        app:is_circle="true"

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                    <!--教程1内容-->
                    <LinearLayout
                        android:layout_height="@dimen/dp_80"
                        android:layout_width="200dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">

                        <!--教程1标题-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginTop="6dp"
                            >
                            <TextView
                                android:id="@+id/account_page_course1_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="树脂画教程"
                                android:textColor="@color/normal_text"/>

                        </LinearLayout>
                        <!--教程1简介-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/account_page_course1_intro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="这是一个树脂画教程，非常简单哦，大家快跟着学起来吧~"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!--教程2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_15"
                    android:orientation="horizontal">


                    <!--教程1封面-->
                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/account_page_course2_img"
                        android:layout_gravity="center_vertical"
                        app:is_circle="true"

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                    <!--教程1内容-->
                    <LinearLayout
                        android:layout_height="@dimen/dp_80"
                        android:layout_width="200dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">

                        <!--教程1标题-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginTop="6dp"
                            >
                            <TextView
                                android:id="@+id/account_page_course2_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="树脂画教程"
                                android:textColor="@color/normal_text"/>

                        </LinearLayout>
                        <!--教程1简介-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/account_page_course2_intro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="这是一个树脂画教程，非常简单哦，大家快跟着学起来吧~"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--发布的专辑-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20">

            <!--标题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10">


                <!--文字-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我发布的专辑"
                    android:textSize="18sp"
                    android:textColor="@color/normal_text"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <!--专辑1-->
                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/account_page_album1_img"
                        android:layout_gravity="center_vertical"
                        app:is_circle="true"

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/account_page_album2_img"
                        android:layout_gravity="center_vertical"
                        app:is_circle="true"

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/account_page_album3_img"
                        android:layout_gravity="center_vertical"
                        app:is_circle="true"

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>


g

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>