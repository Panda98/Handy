<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="vertical">

    <!--step-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_step"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/normal_text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/course_detail_step_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/normal_text"
            android:text="1"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--content-->
    <TextView
        android:id="@+id/course_detail_step_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/text_content"
        android:text="AB胶2.5:1比例混合搅拌均匀静置（搅拌久一点才会更清澈，气泡不用管，它会自己慢慢消失的~~）"
        />

    <!--image-->
    <com.shehuan.niv.NiceImageView
        android:id="@+id/course_detail_step_image"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_200"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        app:corner_radius="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:visibility="invisible"/>

</LinearLayout>