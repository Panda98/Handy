<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">

    <!--user_info-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--image-->
        <ImageView
            android:id="@+id/follow_user_image"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical" />

        <!--detail-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/follow_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:text="哈哈哈"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                />

            <TextView
                android:id="@+id/follow_user_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="2"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/shallow_text"
                android:text="2019-03-29 18:09"/>

        </LinearLayout>
    </LinearLayout>

    <!--course_info-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_88"
        android:orientation="horizontal">

        <!--image-->
        <ImageView
            android:id="@+id/follow_course_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical" />

        <!--description-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/follow_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textStyle="bold"
                android:text="树脂画教程"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:id="@+id/follow_course_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="2"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/shallow_text"
                android:text="Android Handler: 手把手带你深入分析Handler机制源码"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>